<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <!-- *****************   Five Player  *********************** -->
    <RelativeLayout android:id="@+id/five_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <!-- ************************ group 1 *************************** -->
        <LinearLayout android:id="@+id/p1_5"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView android:id="@+id/g1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEST TEXT"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="100dp">

                <Button android:id="@+id/b1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/one"
                    android:layout_centerVertical="true"
                    android:onClick="toggle"/>

                <Button android:id="@+id/b2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/two"
                    android:layout_centerInParent="true"
                    android:onClick="toggle"/>

                <Button android:id="@+id/b3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/three"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:onClick="toggle"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <!-- ***************************** Player Ordering  ************************************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView android:id="@+id/player1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="PLAYER_ONE"
            android:entries="@array/players_array"
            android:prompt="@string/player_select"/>

        <TextView android:id="@+id/player2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="PLAYER2"
            android:entries="@array/players_array"
            android:prompt="@string/player_select"/>

        <!--
     3 or 5 player selection button
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <TextView android:id="@+id/player_switch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Five Player"/>

        <Switch android:id="@+id/num_player_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:showText="false"/>

    </LinearLayout>
-->
    </LinearLayout>
</RelativeLayout>
