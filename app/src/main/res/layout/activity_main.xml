<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <TextView android:id="@+id/player_switch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Five Player"/>

        <Switch android:id="@+id/num_player_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:showText="false"/>

    </LinearLayout>

    <!-- *****************   Five Player  *********************** -->
    <RelativeLayout android:id="@+id/five_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <!-- ************************ Player 1 *************************** -->
        <LinearLayout android:id="@+id/p1_5"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Spinner
                android:layout_width="100dp"
                android:layout_weight="10"
                android:layout_height="100dp"
                android:entries="@array/players_array"
                android:prompt="@string/player_select"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="100dp">

                <Button
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/one"
                    android:layout_centerVertical="true"/>

                <Button
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/two"
                    android:layout_centerInParent="true"/>

                <Button
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/three"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>

        <!-- ************************ Player 2 *************************** -->
        <LinearLayout android:id="@+id/p2_5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/p1_5">

            <Spinner
                android:layout_width="100dp"
                android:layout_weight="10"
                android:layout_height="100dp"
                android:entries="@array/players_array"
                android:prompt="@string/player_select"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="100dp">

                <Button
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/four"
                    android:layout_centerVertical="true"/>

                <Button
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/five"
                    android:layout_centerInParent="true"/>

                <Button
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/six"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>

        <!-- ************************ Player 3 *************************** -->
        <LinearLayout android:id="@+id/p3_5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/p2_5">

            <Spinner
                android:layout_width="100dp"
                android:layout_weight="10"
                android:layout_height="100dp"
                android:entries="@array/players_array"
                android:prompt="@string/player_select"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="100dp">

                <Button
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/seven"
                    android:layout_centerVertical="true"/>

                <Button
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/eight"
                    android:layout_centerInParent="true"/>

                <Button
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/nine"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>

        <!-- ************************ Player 4 *************************** -->
        <LinearLayout android:id="@+id/p4_5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/p3_5">

            <Spinner
                android:layout_width="100dp"
                android:layout_weight="10"
                android:layout_height="100dp"
                android:entries="@array/players_array"
                android:prompt="@string/player_select"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="100dp">

                <Button
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/ten"
                    android:layout_centerVertical="true"/>

                <Button
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/eleven"
                    android:layout_centerInParent="true"/>

                <Button
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/twelve"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>

        <!-- ************************ Player 5 *************************** -->
        <LinearLayout android:id="@+id/p5_5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/p4_5">

            <Spinner
                android:layout_width="100dp"
                android:layout_weight="10"
                android:layout_height="100dp"
                android:entries="@array/players_array"
                android:prompt="@string/player_select"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="100dp">

                <Button
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/thirteen"
                    android:layout_centerVertical="true"/>

                <Button
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/fourteen"
                    android:layout_centerInParent="true"/>

                <Button
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/fifteen"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        
    </RelativeLayout>

    <!--  ********************* Three Player  ***************************** -->
    <RelativeLayout android:id="@+id/three_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- ************************ Player 1 *************************** -->
        <LinearLayout android:id="@+id/p1_3"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Spinner
                android:layout_width="100dp"
                android:layout_weight="10"
                android:layout_height="100dp"
                android:entries="@array/players_array"
                android:prompt="@string/player_select" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/one"
                android:padding="10dp"/>

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/two"
                android:padding="10dp"/>

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/three"
                android:layout_centerVertical="true"
                android:padding="10dp"/>

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/four"
                android:layout_centerVertical="true"
                android:padding="10dp"/>

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/five"
                android:layout_centerVertical="true"
                android:padding="10dp"/>

        </LinearLayout>
        <!-- ************************ Player 2 *************************** -->
        <LinearLayout android:id="@+id/p2_3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/p1_3">

            <Spinner
                android:layout_width="100dp"
                android:layout_weight="10"
                android:layout_height="100dp"
                android:entries="@array/players_array"
                android:prompt="@string/player_select" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/six"
                android:padding="10dp"/>

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/seven"
                android:padding="10dp"/>

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/eight"
                android:layout_centerVertical="true"
                android:padding="10dp"/>

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/nine"
                android:layout_centerVertical="true"
                android:padding="10dp"/>

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/ten"
                android:layout_centerVertical="true"
                android:padding="10dp"/>

        </LinearLayout>
        <!-- ************************ Player 3 *************************** -->
        <LinearLayout android:id="@+id/p3_3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/p2_3">

            <Spinner
                android:layout_width="100dp"
                android:layout_weight="10"
                android:layout_height="100dp"
                android:entries="@array/players_array"
                android:prompt="@string/player_select" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/eleven"
                android:padding="10dp"/>

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/twelve"
                android:padding="10dp"/>

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/thirteen"
                android:layout_centerVertical="true"
                android:padding="10dp"/>

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/fourteen"
                android:layout_centerVertical="true"
                android:padding="10dp"/>

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/fifteen"
                android:layout_centerVertical="true"
                android:padding="10dp"/>

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
