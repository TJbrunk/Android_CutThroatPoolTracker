<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <!-- *****************   Five Player  *********************** -->
    <RelativeLayout android:id="@+id/five_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <!-- ````````````````` group 1 `````````````````````````````````` -->
        <RelativeLayout android:id="@+id/p1_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/g1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="70dp"
                android:layout_margin="25dp"
                android:layout_centerVertical="true"
                android:hint="Group1"/>

            <!-- ^^^^^^^^^^^^^^^^^^^^^^^^ Pool Ball images 1-3 ^^^^^^^^^^^^^^^^^^^^^^^^^^^  -->
            <Button android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/three"
                android:layout_centerVertical="true"
                android:onClick="toggle"/>

            <Button android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/two"
                android:layout_toLeftOf="@id/b3"
                android:layout_centerInParent="true"
                android:onClick="toggle"/>

            <Button android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/b2"
                android:layout_marginRight="25dp"
                android:background="@drawable/one"
                android:layout_centerVertical="true"
                android:onClick="toggle"/>
        </RelativeLayout>
        <!-- ````````````````` group 2 `````````````````````````````````` -->
        <RelativeLayout android:id="@+id/p2_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/p1_5">

            <TextView android:id="@+id/g2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="70dp"
                android:layout_margin="25dp"
                android:layout_centerVertical="true"
                android:hint="Group2"/>

            <!-- ^^^^^^^^^^^^^^^^^^^^^^^^ Pool Ball images 4-6 ^^^^^^^^^^^^^^^^^^^^^^^^^^^  -->
            <Button android:id="@+id/b6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/six"
                android:layout_centerVertical="true"
                android:onClick="toggle"/>

            <Button android:id="@+id/b5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/five"
                android:layout_toLeftOf="@id/b6"
                android:layout_centerInParent="true"
                android:onClick="toggle"/>

            <Button android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/b5"
                android:layout_marginRight="25dp"
                android:background="@drawable/four"
                android:layout_centerVertical="true"
                android:onClick="toggle"/>
        </RelativeLayout>


        <!-- ````````````````` group 3 `````````````````````````````````` -->
        <RelativeLayout android:id="@+id/p3_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/p2_5">

            <TextView android:id="@+id/g3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="70dp"
                android:layout_margin="25dp"
                android:layout_centerVertical="true"
                android:hint="Group3"/>

            <!-- ^^^^^^^^^^^^^^^^^^^^^^^^ Pool Ball images 7-9 ^^^^^^^^^^^^^^^^^^^^^^^^^^^  -->
            <Button android:id="@+id/b9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/nine"
                android:layout_centerVertical="true"
                android:onClick="toggle"/>

            <Button android:id="@+id/b8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/eight"
                android:layout_toLeftOf="@id/b9"
                android:layout_centerInParent="true"
                android:onClick="toggle"/>

            <Button android:id="@+id/b7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/b8"
                android:layout_marginRight="25dp"
                android:background="@drawable/seven"
                android:layout_centerVertical="true"
                android:onClick="toggle"/>
        </RelativeLayout>

        <!-- ````````````````` group 4 `````````````````````````````````` -->
        <RelativeLayout android:id="@+id/p4_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/p3_5">

            <TextView android:id="@+id/g4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="70dp"
                android:layout_margin="25dp"
                android:layout_centerVertical="true"
                android:hint="Group4"/>

            <!-- ^^^^^^^^^^^^^^^^^^^^^^^^ Pool Ball images 10-12 ^^^^^^^^^^^^^^^^^^^^^^^^^^^  -->
            <Button android:id="@+id/b12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/twelve"
                android:layout_centerVertical="true"
                android:onClick="toggle"/>

            <Button android:id="@+id/b11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/eleven"
                android:layout_toLeftOf="@id/b12"
                android:layout_centerInParent="true"
                android:onClick="toggle"/>

            <Button android:id="@+id/b10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/b11"
                android:layout_marginRight="25dp"
                android:background="@drawable/ten"
                android:layout_centerVertical="true"
                android:onClick="toggle"/>
        </RelativeLayout>

        <!-- ````````````````` group 5 `````````````````````````````````` -->
        <RelativeLayout android:id="@+id/p5_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/p4_5">

            <TextView android:id="@+id/g5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="70dp"
                android:layout_margin="25dp"
                android:layout_centerVertical="true"
                android:hint="Group5"/>

            <!-- ^^^^^^^^^^^^^^^^^^^^^^^^ Pool Ball images 13-15 ^^^^^^^^^^^^^^^^^^^^^^^^^^^  -->
            <Button android:id="@+id/b15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/fifteen"
                android:layout_centerVertical="true"
                android:onClick="toggle"/>

            <Button android:id="@+id/b14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/fourteen"
                android:layout_toLeftOf="@id/b15"
                android:layout_centerInParent="true"
                android:onClick="toggle"/>

            <Button android:id="@+id/b13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/b14"
                android:layout_marginRight="25dp"
                android:background="@drawable/thirteen"
                android:layout_centerVertical="true"
                android:onClick="toggle"/>
        </RelativeLayout>
    <!-- ***************************** Player Ordering  ************************************-->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <EditText android:id="@+id/player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:layout_margin="25dp"
            android:hint="Player1"/>

        <EditText android:id="@+id/player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:layout_margin="25dp"
            android:hint="Player2"/>

        <EditText android:id="@+id/player3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:layout_margin="25dp"
            android:hint="Player3"/>

        <EditText android:id="@+id/player4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:layout_margin="25dp"
            android:hint="Player4"/>

        <EditText android:id="@+id/player5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:layout_margin="25dp"
            android:hint="Player5"/>
        <!--      Three or Five player switch         -->
        <TextView android:id="@+id/player_switch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Five Player"/>

        <Switch android:id="@+id/num_player_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:showText="false"/>

    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
